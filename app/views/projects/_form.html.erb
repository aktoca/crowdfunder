
<%= form_for(@project) do |f| %>
	
	<div class="field">
		<%= f.label :name %><br/>
		<%= f.text_field :name %>
	</div>
	
	<div class="field">
		<%= f.label :description %><br/>
		<%= f.text_area :description %>
	</div>
	
	<div class="field">
		<%= f.label :goal %><br/>
		<%= f.text_field :goal %>
	</div>
	
	<div class="field">
		<%= f.label :deadline %><br/>
		<%= f.date_select :deadline %>
	</div>
	<div class="field">
		<%= f.submit %>
	</div>

<% end %>